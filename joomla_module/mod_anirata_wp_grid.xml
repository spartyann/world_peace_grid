<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="4.0" client="site" method="upgrade">
	<name>Anirata World Peace Grid</name>
	<creationDate>2023-08-25</creationDate>
	<author>Yann Tassy</author>
	<authorEmail>yann@anirata.fr</authorEmail>
	<authorUrl>https://www.anirata.fr</authorUrl>
	<license>MIT</license>
	<version>1.6</version>
	<description></description>
	<namespace path="src">Joomla\Module\AnirataWPGrid</namespace>
	<files>
		<filename module="mod_anirata_wp_grid">mod_anirata_wp_grid.php</filename>
		<folder>tmpl</folder>
		<filename>mod_anirata_wp_grid.xml</filename>
	</files>
	<media folder="media" destination="mod_anirata_wp_grid">
		<folder>img</folder>
		<folder>js</folder>
	</media>
	<config>
		<fields name="params">
		   <fieldset name="basic">
				<field name="grid_max_width" type="text" default="80vw" label="Largeur maximum (px, %, vw)" description="" />
				<field name="grid_max_height" type="text" default="75vh" label="Hauteur maximum (px, %, vh)" description="" />
		   </fieldset>
	   </fields>
   </config>
</extension>
